                    set balqty=0.0+shipqty-totgrn
                    if xqty>balqty
                        set globals(ErrChk)="1"
                        error "Qty "+xqty+" cannot be more than Balance Qty "+balqty
                    end if
                end if

                if globals(ErrChk) .ne. "1"
                    set xrowin=0+#sql(int,"select xrowin from poshipitem where zid='"+#id+"' and xpornum='"+xpornum+"' and xshiplno='"+xshiplno+"' and xrowin='"+xrowin+"' and xitem='"+xitem+"'")
                    if #result .eq. "true"
                        set xstatusddt="Item Verified"
                        set xitem=#sql(str,"select xitem from poshipitem where zid='"+#id+"' and xpornum='"+xpornum+"' and xshiplno='"+xshiplno+"' and xrowin='"+xrowin+"' and xitem='"+xitem+"'")
                        set xstype=#sql(str,"select xstype from poshipitem where zid='"+#id+"' and xpornum='"+xpornum+"' and xshiplno='"+xshiplno+"' and xrowin='"+xrowin+"' and xitem='"+xitem+"'")
                        set xtaxcat=#sql(str,"select xtaxcat from poshipitem where zid='"+#id+"' and xpornum='"+xpornum+"' and xshiplno='"+xshiplno+"' and xrowin='"+xrowin+"' and xitem='"+xitem+"'")
                        set xtaxcode1=#sql(str,"select xtaxcode1 from poshipitem where zid='"+#id+"' and xpornum='"+xpornum+"' and xshiplno='"+xshiplno+"' and xrowin='"+xrowin+"' and xitem='"+xitem+"'")
                        set xtaxrate1=0.0+#sql(dec,"select xtaxrate1 from poshipitem where zid='"+#id+"' and xpornum='"+xpornum+"' and xshiplno='"+xshiplno+"' and xrowin='"+xrowin+"' and xitem='"+xitem+"'")
