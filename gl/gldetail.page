            set globals(xcur)=xcur
          end event
        end field

        field xexch
          //display hide
	      //default "1"
        end field
        
        field xpaytype
        	default "Cash"
        	attrib submit
        end field

        field Add
          event before
            set globals(ErrChk) = ""
            
            if globals(ErrChk) .ne. "1"
	            str myqry = "select xpostflag from glheader where zid='"+#id+"' and xvoucher = '"+globals(xvoucher)+"'"
	            str tmpflag = #sql(myqry)
	            if #result .ne. "true"
	              set globals(ErrChk) = "1"
	              error "Voucher not found"
	            else
	              if tmpflag .eq. "Posted"
	                set globals(errChk) = "1"
	                error " Voucher posted -- cannot ADD record"
	              end if
	            end if
	        end if

			if globals(ErrChk) .ne. "1"
			set row=#sql(decimal, "select xrow from gldetail where zid='"+#id+"' and xvoucher='"+xvoucher+"' order by xrow ")
			if row > 0
				set temp = #sql(string, "select xproj from gldetail where zid='"+#id+"' and xvoucher='"+xvoucher+"' and xrow='"+row+"'")				
				if temp .ne. xproj
				error "Please Check Project"
			end if
			end if

            if globals(ErrChk) .ne. "1"
              buffer glmst
              move glmst=glmst(xacc)
              if #result .ne. "True"
                set globals(ErrChk) = "1"
                set #list(account.select)=#char(34)+"xacc like '"+xacc+"%'"+#char(34)
                set #list(account.navigator)=""
                Error "Wrong account -- pick from the list"
              else
              	if glmst.zactive .eq. "1"
	                set #list(account.select)=""
	                set #list(account.navigator)="alpha"
	                set xaccusage=glmst.xaccusage
	                set xaccsource=glmst.xaccsource
	            else
	            	set globals(ErrChk) = "1"
	            	error "Account "+xacc+" Inactive; Cannot use"
	            end if
              end if
            end if
            
            if globals(ErrChk) .ne. "1"
                set globals(xacc) = xacc
                if xaccusage .eq. "Ledger" .or. xaccusage .eq. "Bank" .or. xaccusage .eq. "Cash" .and. xaccsource .eq. "Subaccount"
                  set myqry = "select xsub from glsub where zid='"+#id+"' and xacc='"+xacc+"' and xsub='"+xsub+"'"
                  set tmpret = #sql(str,myqry)
                  if #result .ne. "true"
                    set globals(ErrChk) = "1"
                    set #field(xsub.pick)="list xsub"
                    error "Not a valid Sub-Account<br>Pick from the list"
                  end if

                else if xaccusage .eq. "AR" .and. xaccsource .eq. "Customer"
                	set xsingacccus = #sql("select xsingacccus from cadef where zid='"+#id+"'")
                	if xsingacccus .eq. "1"
                  		set myqry = "select xcus from cacus where zid='"+#id+"' and xaccar='"+xacc+"' and xcus='"+xsub+"'"
                  		set tmpret = #sql(str,myqry)
                  		if #result .ne. "true"
                    		set globals(ErrChk) = "1"
                    		set #field(xsub.pick)="list glcus"
                    		error "Not a valid Sub-Account<br>Pick from the list"
                  		end if
                  	else
                  		set myqry = "select xcus from cacus where zid='"+#id+"' and xcus='"+xsub+"'"
                  		set tmpret = #sql(str,myqry)
                  		if #result .ne. "true"
                    		set globals(ErrChk) = "1"
                    		set #field(xsub.pick)="list glcus"
                    		error "Not a valid Sub-Account<br>Pick from the list"
                  		end if
                  	end if

                else if xaccusage .eq. "AP" .and. xaccsource .eq. "Supplier"
                	set xsingaccsup = #sql("select xsingaccsup from cadef where zid='"+#id+"'")
                	if xsingaccsup .eq. "1"
						set myqry = "select xsup from casup where zid='"+#id+"' and xaccap='"+xacc+"' and xsup='"+xsub+"'"
						set tmpret = #sql(str,myqry)
						if #result .ne. "true"
							set globals(ErrChk) = "1"
							set #field(xsub.pick)="list glsup"
							error "Not a valid Sub-Account<br>Pick from the list"
						end if
					else
						set myqry = "select xsup from casup where zid='"+#id+"' and xsup='"+xsub+"'"
						set tmpret = #sql(str,myqry)
						if #result .ne. "true"
							set globals(ErrChk) = "1"
							set #field(xsub.pick)="list glsup"
							error "Not a valid Sub-Account<br>Pick from the list"
						end if
					end if
                else if xaccusage .eq. "Ledger" .and. xaccsource .eq. "Employee"
                  set myqry = "select xemp from prmst where zid='"+#id+"' and xemp='"+xsub+"'"
                  set tmpret = #sql(str,myqry)
                  if #result .ne. "true"
                    set globals(ErrChk) = "1"
                    set #field(xsub.pick)="list glemp"
                    error "Not a valid Employee<br>Pick from the list"
                  end if
                else
                  set xsub = ""
                end if
            end if
            
            if globals(ErrChk) .ne. "1"
            	if xaccusage .eq. "Bank" .or. xaccusage .eq. "Cash"
            		if xpaytype .eq. "Cash"
            			set xcheque = ""
            		else 
              			if xcheque .eq. ""
              				set globals(ErrChk) = "1"
              				error "Please Key in the Cheque/DD/TT/CC Number"
              			end if
              		end if
              	end if
            end if
            
            if globals(ErrChk) .ne. "1"
				if xcheque .ne. "" .and. glmst.xaccusage .eq. "Bank"
					set temp = #sql(string, "select xvoucher from gldetail where zid='"+#id+"' and xvoucher<>'"+xvoucher+"' and xcheque='"+xcheque+"'")				
					if temp .ne. ""
						set globals(ErrChk) = "1"
						error "The Cheque Number "+xcheque+ " is already entered in Voucher No: "+temp
					else
						set temp = #sql(string, "select xvoucher from glheader where zid='"+#id+"' and xvoucher<>'"+xvoucher+"' and xcheque='"+xcheque+"'")
						if temp .ne. ""
							set globals(ErrChk) = "1"
							error "The Cheque Number "+xcheque+ " is already entered in Voucher No: "+temp
						else							
							set temp=#sql(string, "select xrow from gldetail where zid='"+#id+"' and xaccusage='Bank' and xvoucher='"+xvoucher+"' and xacc<>'"+xacc+"' and xcheque='"+xcheque+"'")
							if temp .ne. ""
								set globals(ErrChk) = "1"
								error "The Cheque Number "+xcheque+ " is already entered in Row No: "+xrow
							end if
						end if						
					end if            
				end if
            end if

// **** following lines should be opened if DR/CR fields is used ***
          if globals(ErrChk) .ne. "1"
            if dramt < 0
              set globals(ErrChk) = "1"
              error "Minus Sign not allowed."
            end if
            if cramt < 0
              set globals(ErrChk) = "1"
              error "Minus Sign not allowed."
            end if
          end if

          if globals(ErrChk) .ne. "1"
            if dramt <= 0
              set xprime=0.0-cramt
            else
              set xprime=dramt
            end if
          end if
//  *** end of lines

			if globals(ErrChk) .ne. "1"
	            set xaccdupcheck = #sql("select xaccdupcheck from cadef where zid='"+#id+"'")
				if xaccdupcheck .eq. "1"
				else
					call chk_duplicate
				end if
			end if
			
			if globals(ErrChk) .ne. "1"
				if xprime == 0.0
					set globals(ErrChk)="1"
					error "Amount cannot be zero "
				end if
			end if

			if globals(ErrChk) .ne. "1"
				set chkcur = #sql("select xcur from xcur where zid='"+#id+"' and xcur='"+xcur+"'")
				if #result .eq. "false"
					set globals(ErrChk) = "1"
					error "Invalid Currency Code"				
				end if
			end if
			
            if globals(ErrChk) .ne. "1"
				set xaccusage=glmst.xaccusage("zid='"+#id+"' and xacc='"+xacc+"'")
				set xaccsource=glmst.xaccsource("zid='"+#id+"' and xacc='"+xacc+"'")
            
              set xexch = #exch(xcur,xdate)
              compute xbase = 0.0+xprime*xexch
	          set zemail = #user
	          set xemail = ""
	          set xlong = xrem
              if #field(xdiv.display) .sw. "h"
                set xdiv=""
              end if
              if #field(xsec.display) .sw. "h"
                set xsec=""
              end if
              if #field(xproj.display) .sw. "h"
                set xproj=""
              end if
            end if
          end event

          event after
              if xprime>0 .and. xaccusage .eq. "AR"
          		  if xaccsource .eq. "Customer"
                	buffer glalc
	                set glalc.xvoucher=xvoucher
      	          	set glalc.xrow=xrow
                	set glalc.xalcnum=xvoucher
	                set glalc.xalcrow=xrow
        	        set glalc.xlong="Dummy Allocation"
              	  	set glalc.xtotamt=0
              	  	set glalc.xcur=xcur
              	  	set glalc.xinvcur=xcur
              	  	set glalc.xexch=xexch
              	  	set glalc.xinvexch=xexch
  	              	insert glalc
	  	          end if
              end if

              if xprime<0 .and. xaccusage .eq. "AP"
          		  if xaccsource .eq. "Supplier"
                	buffer glalc
	                set glalc.xvoucher=xvoucher
                 	set glalc.xrow=xrow
                	set glalc.xalcnum=xvoucher
                	set glalc.xalcrow=xrow
                	set glalc.xlong="Dummy Allocation"
              	  	set glalc.xtotamt=0
                	insert glalc
          		  end if
              end if

              //Check out of balance
              decimal totalamt=#sql(double, "select round(sum(xprime*xexch),2) from gldetail where zid='"+#id+"' and xvoucher='"+globals(xvoucher)+"'")
              if totalamt == 0.0
                set tmpflag = #sql(str,"update glheader set xstatusjv = 'Balanced' where zid='"+#id+"' and xvoucher = '"+globals(xvoucher)+"'")
              else
                set tmpflag = #sql(str,"update glheader set xstatusjv = 'Out of Balance' where zid='"+#id+"' and xvoucher = '"+globals(xvoucher)+"'")
              end if
              if #result .ne. "true"
                print "<h3><font color=red>Voucher Status not updated.</font></h3>"
              end if
            end if
          end event
        end field

        field Update
          event before
          	set globals(ErrChk) = ""

			if globals(ErrChk) .ne. "1"
				if xrow <> globals(xrow)
					set globals(ErrChk) = "1"
					set #command = "show" 
					print "<font color=red>Record Pointer Mismatch; Cannot <font color=blue>Update <br> New Record Retrieved</font>" 
				end if
			end if
			
			if globals(ErrChk) .ne. "1"
				if xrow <> globals(temp)
					set globals(ErrChk) = "1"
					set #command = "show" 
					print "<font color=red>Record Pointer Mismatch; Cannot <font color=blue>Update <br> New Record Retrieved</font>" 
				end if
			end if          
			
		    if globals(ErrChk) .ne. "1"
	            str myqry = "select xpostflag from glheader where zid='"+#id+"' and xvoucher = '"+globals(xvoucher)+"'"
	            str tmpflag = #sql(myqry)
	            if #result .ne. "true"
	              set globals(ErrChk) = "1"
	              error "Voucher not found"
	            else
	              if tmpflag .eq. "Posted"
	                set globals(errChk) = "1"
	                error " Voucher posted -- cannot be Updated"
	              end if
	            end if
	        end if    

            if globals(ErrChk) .ne. "1"
              buffer glmst
              move glmst=glmst(xacc)
              if #result .ne. "True"
                set globals(ErrChk) = "1"
                set #list(account.select)=#char(34)+"xacc like '"+xacc+"%'"+#char(34)
                set #list(account.navigator)=""
                Error "Wrong account -- pick from the list"
              else
              	if glmst.zactive .eq. "1"
	                set #list(account.select)=""
	                set #list(account.navigator)="alpha"
	                set xaccusage=glmst.xaccusage
	                set xaccsource=glmst.xaccsource
	            else
	            	set globals(ErrChk) = "1"
	            	error "Account "+xacc+" Inactive; Cannot use"
	            end if
              end if
            end if
            
            if globals(ErrChk) .ne. "1"
                if xaccusage .eq. "Ledger" .or. xaccusage .eq. "Bank" .or. xaccusage .eq. "Cash" .and. xaccsource .eq. "Subaccount"
                  set myqry = "select xsub from glsub where zid='"+#id+"' and xacc='"+xacc+"' and xsub='"+xsub+"'"
                  set tmpret = #sql(str,myqry)
                  if #result .ne. "true"
                    set globals(ErrChk) = "1"
                    //set #field(xsub.pick)="list xsub"
                    //error "Not a valid Sub-Account<br>Pick from the list"
                    print "Not a valid Sub-Account"
                  end if

                else if xaccusage .eq. "AR" .and. xaccsource .eq. "Customer"
                	set xsingacccus = #sql("select xsingacccus from cadef where zid='"+#id+"'")
                	if xsingacccus .eq. "1"
                  		set myqry = "select xcus from cacus where zid='"+#id+"' and xaccar='"+xacc+"' and xcus='"+xsub+"'"
                  		set tmpret = #sql(str,myqry)
                  		if #result .ne. "true"
                    		set globals(ErrChk) = "1"
                    		set #field(xsub.pick)="list glcus"
                    		error "Not a valid Sub-Account<br>Pick from the list"
                  		end if
                  	else
                  		set myqry = "select xcus from cacus where zid='"+#id+"' and xcus='"+xsub+"'"
                  		set tmpret = #sql(str,myqry)
                  		if #result .ne. "true"
                    		set globals(ErrChk) = "1"
                    		set #field(xsub.pick)="list glcus"
                    		error "Not a valid Sub-Account<br>Pick from the list"
                  		end if
                  	end if

                else if xaccusage .eq. "AP" .and. xaccsource .eq. "Supplier"
                	set xsingaccsup = #sql("select xsingaccsup from cadef where zid='"+#id+"'")
                	if xsingaccsup .eq. "1"
						set myqry = "select xsup from casup where zid='"+#id+"' and xaccap='"+xacc+"' and xsup='"+xsub+"'"
						set tmpret = #sql(str,myqry)
						if #result .ne. "true"
							set globals(ErrChk) = "1"
							set #field(xsub.pick)="list glsup"
							error "Not a valid Sub-Account<br>Pick from the list"
						end if
					else
						set myqry = "select xsup from casup where zid='"+#id+"' and xsup='"+xsub+"'"
						set tmpret = #sql(str,myqry)
						if #result .ne. "true"
							set globals(ErrChk) = "1"
							set #field(xsub.pick)="list glsup"
							error "Not a valid Sub-Account<br>Pick from the list"
						end if
					end if

                else if xaccusage .eq. "Ledger" .and. xaccsource .eq. "Employee"
                  set myqry = "select xemp from prmst where zid='"+#id+"' and xemp='"+xsub+"'"
                  set tmpret = #sql(str,myqry)
                  if #result .ne. "true"
                    set globals(ErrChk) = "1"
                    set #field(xsub.pick)="list glemp"
                    error "Not a valid Employee<br>Pick from the list"
                  end if

                else
                  set xsub = ""
                end if
            end if

// **** following lines should be opened if DR/CR fields is used ***
          if globals(ErrChk) .ne. "1"
            if dramt < 0
              set globals(ErrChk) = "1"
              error "Minus Sign not allowed."
            end if
            if cramt < 0
              set globals(ErrChk) = "1"
              error "Minus Sign not allowed."
            end if
          end if

          if globals(ErrChk) .ne. "1"
            if dramt <= 0
              set xprime=0.0-cramt
            else
              set xprime=dramt
            end if
          end if

            if globals(ErrChk) .ne. "1"
            	if xaccusage .eq. "Bank" .or. xaccusage .eq. "Cash"
            		if xpaytype .eq. "Cash"
            			set xcheque = ""
            		else 
              			if xcheque .eq. ""
              				set globals(ErrChk) = "1"
              				error "Please Key in the Cheque/DD/TT/CC Number"
              			end if
              		end if
              	end if
            end if
            
            if globals(ErrChk) .ne. "1"
            	if xcheque .ne. globals(xcheque)
					if xcheque .ne. "" .and. glmst.xaccusage .eq. "Bank"
						set temp = #sql(string, "select xvoucher from gldetail where zid='"+#id+"' and xvoucher<>'"+xvoucher+"' and xcheque='"+xcheque+"'")				
