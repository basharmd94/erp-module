     end list

     list one
        caption "<br><center><b>"Added Account(s)"</b>"
        table gldetaildescview
        order xvoucher,xrow
        fixed xvoucher
        rows 100
        objects xrow attrib(link #servlet+"?page="+page+"&command=Show&xvoucher=?&xrow=?"), ~
                xacc,acc_desc,~
                xsub,sub_desc,~
				xdiv,xsec,xproj,~
				debit,credit

        totals "","Totals","","","","","","",sum,sum

        field acc_desc
          caption Description
        end field
		
		field debit
			caption Debit Amount
			storage decimal
			len 10.2
		end field
		
		field credit
			caption Credit Amount
			storage decimal
			len 10.2
		end field
        
        field sub_desc
          caption Description
        end field
               
     end list

     list grnlist
        table glgrn
        order xvoucher,xrow,xgrnnum
        fixed xvoucher,xrow
        rows 100
        objects ~
			xgrnnum ,xtotamt
     end list
     
     form one
     	//caption "<font color=black size=3>Details for Voucher"
     	valid valid,access
        table gldetail
        order xvoucher,xrow desc
        fixed xvoucher
		focus xacc
		default Add
        layout 1
        objects Add,Clear,Show,Update, Top,Previous, Next,Delete, Bottom,Allocate,Return,~
               xrow attrib(row 0 1),xacc attrib(submit; attach),dummy_1,xsub attrib(attach),dummy_2,~
               xcur,xexch,xstatus display(hide),~
               dramt,cramt,xprime display(const),xbase,~
               xproj attribe(maindatory),xdiv,xsec,xpaytype,xcheque,xlong display(hide),xrem,xaccusage display(text),~
               xaccsource display(text),xicacc display(hide),xicsub display(hide),~
               xallocation display(hide),xstatusrfp display(hide),~
               xicdiv display(hide),xicsec display(hide),xicproj display(hide),~
               xacctype display(hide),xvmcode display(hide),xamount display(hide),~
               xinvnum,xoriginal,xtypegl display(hide),zemail display(const),xemail display(const),xsp,~
               xref display(hide),xdateapp display(hide),xpaycode display(hide),xexchval display(hide),~
               xdateclr display(hide),xflag display(hide),xdatedue display(hide)
            
		field show
			event after
				set globals(temp) = xrow
			end event
		end field
		
		field xsp
			display text
			pick list xemp
			event after
				if xsp .eq. ""
					set xsp=#sql("select xsp from cacus where zid='"+#id+"' and xcus='"+xcus+"'")
				end if
			end event
        end field

		field top
			event after
				set globals(temp) = xrow
			end event
		end field
				                  
        field xrow
        	col 3
          event after
            set globals(xrow)=xrow
            set globals(xsub)=xsub
            set globals(xdiv)=xdiv
            set globals(xsec)=xsec
            set globals(xproj)=xproj
            set globals(xcheque)=xcheque
            set #field(xacc.caption) = "<font color=red>"+#field(xacc.caption)+"</font>"
            set #field(xsub.caption) = "<font color=red>"+#field(xsub.caption)+"</font>"
            set totval = #sql(decimal,"select sum(xprime) from gldetail where zid='"+#id+"' and xvoucher='"+globals(xvoucher)+"'")
            if totval != 0.0
            	set #field(Return.display)="disable"
            end if
            if xaccusage .eq. "AP" .or. xaccusage .eq. "AR"
            else
            	set #field(Allocate.display) = "hide"
            end if
	      	set #field(zemail.caption) = "Entered By"
	      	set #field(xemail.caption) = "Last Updated By"             
          end event
        end field

        field xdiv
          //display hide
        end field

        field xsec
          //display hide
        end field

        field xproj
          display ocombo
		   pick "select xcode from xcodes where zid='"+#id+"' and xtype='Project'"
		  wide 4
        end field

        field xrem
          width 50
          height 2
          columns 3
        end field

        field xacc
          pick list xacc
          width 10
        end field

        field dummy_1
          attrib local
          display constant
          caption Account Description
          //event after
          //  set dummy_1=#sql(str,"select xdesc from glmst where xacc='"+globals(xacc)+"'")
          //end event
        end field

        field dummy_2
          attrib local
          display constant
          caption Sub Account Description
        end field

        field dummy_3
          attrib local
          display constant
          caption Voucher Number
          event after
            set dummy_3=xvoucher
          end event
        end field

        field xaccsource
          pick
            display constant
          default ""
        end field

        field xaccusage
          pick
            display constant
          default ""
          event after
            set globals(xaccusage)=xaccusage
          end event
        end field

       field xprime
       	caption Amount
        event after
          set globals(xprime)=0-xprime
        end event
       end field

        field dramt
          attrib local
          display text
          caption Debit Amount
          event after
            //decimal curntamt=xprime
            //if curntamt>0
              //set dramt=curntamt
            //else
              //set dramt="0.00"
            //end if
			set xprime=0.00+dramt
          end event
        end field

        field cramt
          attrib local
          display text
          caption Credit Amount
          event after
            //decimal curntamt=xprime
            //print curntamt
            //if curntamt<0
              //set cramt=0.0-curntamt
            //else
              //set cramt="0.00"
            //end if
			set xprime=0.00-cramt
