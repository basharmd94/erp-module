    list new
        caption "<br><center><b>"New Tag List"</b>"
        table imtag
        order xtagnum desc
        select "xstatustag like '1%'"
        rows 5
        objects ~
         xtagnum attrib(link "main?page=imtag&command=Show&xtagnum=?"), ~
         xdate,xwh
     
     end list

    list confirm
        caption "<br><center><b>"Confirmed Tag List"</b>"
        table imtag
        order xtagnum desc
        select "xstatustag like '5%'"
        rows 5
        objects ~
         xtagnum attrib(link "main?page=imtag&command=Show&xtagnum=?"), ~
         xdate,xwh
     
     end list
          
     list detail
        caption "<font size=2>Item(s) Added</font>"
        table imtdet
        order xtagnum,xrow
        fixed xtagnum
        rows 10
        objects xrow attrib(link "main?page=imtdet&command=Show&xtagnum=?&xrow=?"), ~
                xitem,itemdesc equals((select xdesc from caitem where zid=imtdet.zid and xitem=imtdet.xitem)),~
