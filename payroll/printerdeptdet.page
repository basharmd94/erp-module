page printerdept

   embed onload="move_caret('one','xdesc')"
     caption "<span class=bl>Inter Departmental Working Information for Employee  <a href=/da/"+#servlet+"?page=printerdept&command=Show&xemp="+xemp+">" +xemp+ "</a></span>"+" ("+globals(xname)+")"
     sidebar list one
     sections form one, script myscript

     list one
        caption "Added Record(s)"
        table printerdeptdet
        order xrow,xemp
        select "(xemp='"+xemp+"')"
        //navigators alpha
        rows 60
        objects xrow attrib(link #servlet+"?page="+page+"&command=Show&xemp=?&xrow=?"),~
              xdate,xrem
              
        field xrem
            caption Reason
        end field
        
     end list

     form one
        //caption "<font color=black size=4>Furniture Allocation for <font color=white></p>"+globals(xname)+"</font></font>"
        table printerdeptdet
        order xrow,xemp
        fixed xemp
        layout 1
        objects Add, Clear,Show,  Update,  Top, Delete,Previous, Next, Bottom,Return,~
                xrow attrib(row 0 1),xdate,xdoctype display(hide),xqty display(hide),zemail display(hide),xemail display(hide),~
                xjobdesc,xdeptassgn,xassignee,xtimespent,xunitsprod,xrem,xremarks

        field xqtyspc
            caption Number of Copy
        end field
        
        filed xdoctype
            display hide
            pick "select xcode from xcodes where xtype='Doccument Type'"
        end field

        field xrem
            caption Reason
            width 40
            height 3
        end field
        
        field xremarks
            caption Remarks/Comments
            width 40
            height 3
        end field

        # New job-related fields
        field xjobdesc
            caption Job Description
            width 50
            height 3
        end field

        field xdeptassgn
            caption Assigned Department
            pick "select xcode from xcodes where xtype='Department'"
        end field

        field xassignee
            caption Assignee
            pick "select xemp from praemp where zid='"+#id+"'"
        end field

        field xtimespent
            caption Time Spent on Job
            len 10.2
        end field

        field xunitsprod
            caption Units Produced
            len 10
        end field
        
        field add
          event before
            set zemail=#user
            set xemail=""
          end event
        end field

        field update
          event before
            set xemail=#user
          end event
        end field

        embed onsubmit="submitit(this)"

        field Return
            embed onclick="back(this)"
        end field

     end form

     script myscript

        <script language="javascript" type="text/javascript">
        var detail=""

        function back(b)
        {
          details="back"
        }
        function submitit(form)
        {
          if (details=="back")
          {
            form.page.value = "printerdept"
            form.searchbutton.value= "Find xemp=?"
          }
        }
        </script>
     end script

end page
